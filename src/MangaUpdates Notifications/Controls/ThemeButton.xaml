<UserControl x:Class="MangaUpdates_Notifications.Controls.ThemeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:MangaUpdates_Notifications.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:ThemeButton, IsDesignTimeCreatable=True}">
    <Grid d:Background="White">
        <Button Click="Button_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ui:PathIcon x:Name="pIcon" Width="16" Height="16" Data="{StaticResource DarkThemeIcon}" />
                <TextBlock x:Name="tbText" Text="Light Theme" Margin="10,0,0,0"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
